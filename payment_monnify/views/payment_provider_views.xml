<odoo>

    <record id="payment_provider_onboarding_wizard_form_monnify" model="ir.ui.view">
        <field name="name">payment.provider.onboarding.wizard.form.monnify</field>
        <field name="model">payment.provider.onboarding.wizard</field>
        <field name="inherit_id" ref="payment.payment_provider_onboarding_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">

                <group attrs="{'invisible': [('code', '!=', 'monnify')]}">

                    <field name="monnify_api_key"
                           attrs="{'required': [('code', '=', 'monnify')]}"/>

                    <field name="monnify_secret_key"
                           attrs="{'required': [('code', '=', 'monnify')]}"/>

                    <field name="monnify_contract_code"
                           attrs="{'required': [('code', '=', 'monnify')]}"/>

                </group>

            </xpath>
        </field>
    </record>

</odoo>
