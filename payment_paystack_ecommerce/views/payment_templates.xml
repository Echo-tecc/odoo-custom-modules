<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="payment_form" inherit_id="payment.form">
        <xpath expr="." position="inside">
            <t t-call="payment_paystack_ecommerce.paystack_assets"/>
        </xpath>
    </template>

    <template id="express_checkout" inherit_id="payment.express_checkout">
        <xpath expr="." position="inside">
            <t t-call="payment_paystack_ecommerce.paystack_assets"/>
        </xpath>
    </template>

    <template id="paystack_assets">
        <!-- As the following link does not end with '.js', it's not loaded when
             placed in __manifest__.py. The following declaration fix this problem -->
        <script type="text/javascript" src="https://js.paystack.co/v2/inline.js"></script>
    </template>

    <template id="paystack_form">
            <!-- Paystack generates a new payment link for each transaction -->
            <form t-att-action="api_url" method="post"></form>
        </template>

</odoo>